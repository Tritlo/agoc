{
  "name": "agoc",
  "version": "0.1.0",
  "description": "Haskell WASM game packaged as Electron app with Steamworks support",
  "author": {
    "name": "Matthias Pall Gissurarson",
    "email": "mpg@mpg.is"
  },
  "homepage": "https://github.com/Tharkun/agoc",
  "main": "electron/main.js",
  "scripts": {
    "vendor:download": "./scripts/vendor-dependencies.sh",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "electron:pack": "electron-builder --dir"
  },
  "build": {
    "appId": "se.tharkun.agoc",
    "productName": "agoc",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "public/**/*",
      "package.json",
      "steam_appid.txt",
      "node_modules/steamworks.js/**/*"
    ],
    "extraResources": [
      {
        "from": "steam_appid.txt",
        "to": "steam_appid.txt"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Game",
      "maintainer": "Matthias Pall Gissurarson <mpg@mpg.is>",
      "executableName": "agoc",
      "extraFiles": [
        {
          "from": "build/run.sh",
          "to": "run.sh"
        }
      ]
    }
  },
  "dependencies": {
    "steamworks.js": "^0.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
